#------------------------------------------------------------------------------
# Boo Chain - Art
#------------------------------------------------------------------------------

.DEFAULT_GOAL := default

#------------------------------------------------------------------------------
# setup
#------------------------------------------------------------------------------

.PHONY: npm-setup

npm-setup:
	npm install

#------------------------------------------------------------------------------
# build
#------------------------------------------------------------------------------

.PHONY: default all dist

default: all

app/art.js: src/traits.js src/circle.js src/boot.js src/index.js src/art.js
	gulp js:art

app/min/art-min.js: app/art.js
	gulp js:min

all: app/min/art-min.js
	:

#------------------------------------------------------------------------------
# misc
#------------------------------------------------------------------------------

watch:
	gulp watch
